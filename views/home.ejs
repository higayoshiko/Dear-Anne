<%- include("partials/navbar"); -%>
<%- include("partials/side-profile"); -%>

<div class="post__column">
  <header class="header">
    <img src="/images/Dear.png" alt="logo">
    <img src="/images/A.png" alt="logo">
    <img src="/images/nne.png" alt="logo">
  </header>
  <h2 class="h2"></h2>
  <div class="home-grid">
    <% posts.forEach(post => { %>
    <div class="container bg-light p-5">
      <a class="post__title" href="/posts/<%= post._id %>">
        <h2 class="h2"><%= post.title %></h2>
      </a>
      <p class="fs-3 fw-light">
        <%= post.content.substring(0, 300) + "..." %>
      </p>
    </div>
    <% }) %>
  </div>
</div>
</div>

<%- include("partials/footer"); -%>
